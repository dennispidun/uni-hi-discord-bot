{
  "compilerOptions": {
    "target": "ES5",                          
    "module": "commonjs",                    
    "lib": ["es2017", "ES6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": false,    
    "strictNullChecks": false,     
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}